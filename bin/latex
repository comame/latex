#!/bin/sh

watchFile() {
    WATCHFILE_FILENAME=$1
    shift

    WATCHFILE_COMMAND=""
    while [ $# -gt 0 ]
    do
        WATCHFILE_COMMAND="$WATCHFILE_COMMAND $1"
        shift
    done

    eval $WATCHFILE_COMMAND
    WATCHFILE_LAST=`openssl sha256 -r $WATCHFILE_FILENAME | awk '{print $1}'`
    while true; do
        sleep 0.1
        WATCHFILE_CURRENT=`openssl sha256 -r $WATCHFILE_FILENAME | awk '{print $1}'`
        if [ "$WATCHFILE_LAST" != "$WATCHFILE_CURRENT" ]; then
            eval $WATCHFILE_COMMAND
            WATCHFILE_LAST=$WATCHFILE_CURRENT
        fi
    done
}

printHelp() {
    printf "%s\n" \
        "" \
        "latex [OPTIONS] [<FILENAME>]" \
        "" \
        "<FILENAME> is the name of the \`.tex\` file without extension, such as \"article\" for \"article.tex\"." \
        "" \
        "Options:" \
        "  -w, --watch    Watch for file changes." \
        "  -h, --help     Display help." \
        ""
}

set -e

### Handle options and arguments

OPTIONS=$(getopt -n latex -o wh -l watch,help -- "$@")
eval set -- $OPTIONS

OPT_IS_WATCH=false
OPT_IS_HELP=false

while [ $# -gt 0 ]
do
    case $1 in
        -w) OPT_IS_WATCH=true;;
        --watch) OPT_IS_WATCH=true;;
        -h) OPT_IS_HELP=true;;
        --help) OPT_IS_HELP=true;;
        --) shift; break;
    esac
    shift
done

ARG_FILENAME=""

while [ $# -gt 0 ]
do
    ARG_FILENAME=$1
    break;
done


### Main

if "${OPT_IS_HELP}"; then
    printHelp
    exit 0
fi

ENTRYPOINT="docker run --rm -v $(pwd):/home/user --name latex-cli comameito/latex"
FILENAME="doc"

COMMAND=""

if [ "$ARG_FILENAME" = "" ]; then
    FILENAME="doc"
else
    FILENAME=$ARG_FILENAME
fi

if echo "$FILENAME" | grep -q "/"; then
    echo "latex: <FILENAME> must not be path" 1>&2
    exit 1
fi

if [ ! -e "$FILENAME.tex" ]; then
    echo "latex: file $FILENAME.tex not found in this directory" 1>&2
    exit 1
fi

if "${OPT_IS_WATCH}"; then
    COMMAND="watchFile $FILENAME.tex $ENTRYPOINT $FILENAME"
else
    COMMAND="$ENTRYPOINT $FILENAME"
fi

eval $COMMAND
